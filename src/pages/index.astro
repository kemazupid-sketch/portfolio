    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800display=swap" rel="stylesheet" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
</head>
<body>
    <style is:global>
        :root {
            --bg-color: #ffffff;
            --bg-secondary: #f8fafc;
            --text-primary: #0a0a0a;
            --text-secondary: #6b7280;
            --primary: #2563eb;
            --primary-hover: #1e40af;
            --border-color: rgba(10, 10, 10, 0.06);
            --header-bg: rgba(255, 255, 255, 0.8);
            --contact-bg: #000000;
            --contact-text: #ffffff;
        }

        body.dark-mode {
            --bg-color: #0a0a0a;
            --bg-secondary: #060606;
            --text-primary: #ffffff;
            --text-secondary: #9ca3af;
            --contact-text: #0a0a0a;
        }

        *, *::before, *::after {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            color: var(--text-primary);
            background: var(--bg-color);
            overflow-x: hidden;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 1.25rem;
            width: 100%;
            top: 0;
            z-index: 1000;
        }

        nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 0;
        }

        .logo {
            display: flex;
            gap: 0.5rem;
            align-items: center;
            text-decoration: none;
            color: inherit;
            font-weight: 700;
        }

        .nav-center ul {
            display: flex;
            list-style: none;
            gap: 2rem;
            margin: 0;
            padding: 0;
        }

        .nav-links a {
            color: var(--text-secondary);
            text-decoration: none;
            font-weight: 500;
            font-size: 0.9rem;
            transition: color 0.2s ease;
            position: relative;
        }

        .nav-links a::after {
            content: '';
            position: absolute;
            bottom: -6px;
            left: 0;
            width: 0;
            height: 2px;
            background: var(--primary);
            transition: width 0.2s ease;
        }

        .nav-links a:hover::after {
            width: 100%;
        }

        .icon-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: background 0.2s ease;
            font-size: 1.2rem;
            padding: 0;
        }

        .icon-btn:focus-visible {
            outline: 2px solid var(--primary);
            outline-offset: 2px;
        }

        .lang-btn {
            font-size: 0.85rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.2s ease;
        }

        .lang-btn:focus-visible {
            outline: 2px solid var(--primary);
            outline-offset: 2px;
        }

        .mobile-menu-btn {
            display: none;
            width: 44px;
            height: 44px;
            border: none;
            background: transparent;
            color: var(--text-primary);
            cursor: pointer;
            padding: 8px;
            border-radius: 8px;
        }

        .mobile-menu-btn:hover {
            background: var(--bg-secondary);
        }

        .mobile-menu-btn:focus-visible {
            outline: 2px solid var(--primary);
            outline-offset: 2px;
        }

        .mobile-menu-btn i {
            font-size: 1.5rem;
        }

        .mobile-nav {
            position: fixed;
            top: 73px;
            left: 0;
            right: 0;
            background: var(--header-bg);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid var(--border-color);
            padding: 1rem 0;
            transform: translateY(-100%);
            opacity: 0;
            visibility: hidden;
            transition: transform 0.3s ease, opacity 0.3s ease, visibility 0.3s;
            z-index: 999;
        }

        .mobile-nav.active {
            transform: translateY(0);
            opacity: 1;
            visibility: visible;
        }

        .mobile-nav ul {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
            margin: 0;
            padding: 0;
        }

        .mobile-nav a {
            color: var(--text-primary);
            text-decoration: none;
            font-size: 1.1rem;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            transition: background 0.2s ease;
        }

        .mobile-nav a:hover {
            background: var(--bg-secondary);
        }

        section {
            padding: 6rem 0;
        }

        .hero {
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding-top: 80px;
            position: relative;
            overflow: hidden;
            background: var(--bg-color);
        }

        .hero-bg {
            position: absolute;
            inset: 0;
            opacity: 1;
            z-index: 0;
            height: 100%;
            overflow: hidden;
            z-index: 0;
            will-change: transform;
        }

        .hero-line {
            position: absolute;
            width: 200%;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--border-color), transparent);
            animation: moveLine 10s linear infinite;
            opacity: 0.3;
            will-change: transform;
        }

        .hero-line:nth-child(1) {
            top: 20%;
            animation-duration: 15s;
        }

        .hero-line:nth-child(2) {
            top: 40%;
            animation-duration: 20s;
            animation-delay: -5s;
        }

        .hero-line:nth-child(3) {
            top: 60%;
            animation-duration: 18s;
            animation-delay: -10s;
        }

        .hero-line:nth-child(4) {
            top: 80%;
            animation-duration: 22s;
            animation-delay: -3s;
        }

        @keyframes moveLine {
            0% { transform: translateX(0); }
            100% { transform: translateX(-50%); }
        }

        .hero-content {
            max-width: 800px;
            animation: fadeInUp 0.8s ease;
            position: relative;
            z-index: 1;
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .hero h1 {
            font-size: clamp(2.5rem, 5vw, 4rem);
            font-weight: 800;
            letter-spacing: -0.03em;
            line-height: 1.1;
        }

        .hero p {
            font-size: clamp(1rem, 2vw, 1.25rem);
            color: var(--text-secondary);
            margin-bottom: 2rem;
            line-height: 1.7;
        }

        .btn {
            display: inline-flex;
            gap: 0.75rem;
            align-items: center;
            justify-content: center;
            padding: 0.9rem 1.25rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 0.95rem;
            transition: background 0.2s ease, transform 0.2s ease;
            cursor: pointer;
            border: none;
            font-family: inherit;
        }

        .btn-primary {
            background: var(--primary);
            color: var(--bg-color);
        }

        .btn-primary:hover {
            background: var(--primary-hover);
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: transparent;
            border: 1px solid var(--border-color);
            color: var(--text-primary);
        }

        .btn:focus-visible {
            outline: 2px solid var(--primary);
            outline-offset: 2px;
        }

        .section-header {
            text-align: center;
            margin-bottom: 4rem;
        }

        .section-header h2 {
            font-size: clamp(2rem, 4vw, 2.5rem);
            font-weight: 700;
            letter-spacing: -0.02em;
            margin-bottom: 1rem;
        }

        .about-image img {
            width: 100%;
            height: auto;
            max-width: 450px;
            border-radius: 20px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
            aspect-ratio: 1 / 1;
        }

        .about-content h3 {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .bento-card {
            border-radius: 20px;
            padding: 2rem;
            border: 1px solid var(--border-color);
            transition: transform 0.2s ease;
            position: relative;
            overflow: hidden;
        }

        .bento-card:hover {
            transform: translateY(-4px);
        }

        .bento-card.large {
            grid-column: span 2;
        }

        .bento-icon {
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            border: 1px solid var(--border-color);
        }

        .bento-title {
            font-weight: 600;
            margin-bottom: 0.75rem;
            letter-spacing: -0.01em;
            color: var(--text-primary);
        }

        .bento-card p {
            color: var(--text-secondary);
            font-size: 0.95rem;
            line-height: 1.6;
        }

        .contact {
            background: var(--contact-bg);
            color: var(--contact-text);
            overflow: hidden;
        }

        .contact .section-header h2,
        .contact .section-header p {
            color: var(--contact-text);
        }

        .contact-links {
            display: flex;
            gap: 1.5rem;
            flex-wrap: wrap;
            margin-top: 3rem;
        }

        .contact-link {
            display: inline-flex;
            gap: 0.75rem;
            align-items: center;
            padding: 0.9rem 1.25rem;
            text-decoration: none;
            border-radius: 14px;
            font-weight: 500;
            transition: background 0.2s ease, transform 0.2s ease;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .contact-link:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .contact-link i {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            opacity: 0;
            visibility: hidden;
            transform: translateY(20px);
            transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s ease;
            z-index: 999;
        }

        .scroll-top-btn {
            position: fixed;
            right: 1.5rem;
            bottom: 1.5rem;
            background: var(--primary);
            color: #fff;
            border-radius: 999px;
            width: 48px;
            height: 48px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transform: translateY(20px);
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .scroll-top-btn.visible {
            opacity: 1;
            visibility: visible;
            transform: translateY(0);
        }

        .fade-in {
            opacity: 0;
            transform: translateY(30px);
            transition: opacity 0.6s ease, transform 0.6s ease;
        }

        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
        }

        @media (max-width: 968px) {
            .about-grid {
                grid-template-columns: 1fr;
                gap: 3rem;
            }

            .bento-grid {
                grid-template-columns: 1fr 1fr;
            }

            .bento-card.large {
                grid-column: span 1;
            }

            .nav-center {
                display: none;
            }

            .mobile-menu-btn {
                display: flex;
                align-items: center;
                justify-content: center;
            }
        }

        @media (max-width: 640px) {
            .bento-grid {
                grid-template-columns: 1fr;
            }

            .mobile-menu-btn {
                width: 40px;
                height: 40px;
            }

            section {
                padding: 4rem 0;
            }

            .scroll-top-btn {
                width: 40px;
                height: 40px;
                font-size: 1.3rem;
            }
        }

        @media (prefers-reduced-motion: reduce) {
            *, *::before, *::after {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }

            html {
                scroll-behavior: auto;
            }
        }
    </style>

